<form method="POST" action="" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Наименование</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="">
    </div>
    
    
    <div class="form-group">
      <label for="description">Описание</label>
      <textarea class="form-control" id="description" name="description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="price">Цена</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="">
      </div>
     <div class="form-group">
      <label for="urlImg">Изображение</label>
      <input type="file" name="urlImg" id="urlImg" class="form-control" accept="image/*">
    </div> 
    <div class="form-group">
        <label for="count">Кол-во</label>
        <input type="text" class="form-control" id="count" name="count" placeholder="">
      </div>
      <!-- <div class="form-group">
        <label for="type">Категория</label>
        <input type="text" class="form-control" id="type" name="type" placeholder="">
      </div>  -->
      <div class="form-group col-12">
        <label for="inputState">Категория</label>
        <select name="type" id="type" class="type form-control">
        <option selected>Абсент</option>
        <option >Водка</option>
        <option>Вино</option>
        <option>Пиво</option>
        <option>Джин</option>
        <option>Ром</option>
        <option>Виски</option>
        <option>Коньяк</option>
        </select>
        </div>
    <div class="form-group">
        <button type="submit">Добавить</button>
    </div>
  </form>