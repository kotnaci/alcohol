<div class="container">
    <div class="row">
        <div class="col-12">
            <% if (orders) { %>
            <table class="table">
                <thead class="thead-dark">
                    <thead class="thead-dark">
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">ФИО</th>
                          <th scope="col">Телефон</th>
                          <th scope="col">Дата и время заказа</th>
                          
                          <!-- <th scope="col">Продукция</th> -->
                          <th scope="col">Сумма</th>
                          <th scope="col">Стуатус</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% orders.forEach(function(order) { %>
                            <tr>
                                <th scope="row"><%= order._id%></th>
                                <td><%= order.FIO%></td>
                                <td><%= order.phone%></td>
                                <td><%= order.date %></td>
                                
                                <td><%= order.price %></td>
                                <td><%= order.status %></td>
                                <td><a href="/admin/orders/<%= order._id %>" class="btn btn-danger"><i class="fas fa-pen "></i></a> </td>
                            </tr>
                        <% }); %>
                    </tbody>
                  </table>
            <% } %>
                </thead>
            </table>
        </div>
    </div>
</div>